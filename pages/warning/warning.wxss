/* pages/map/map.wxss */
.map {
  height:100vh;
  width:100vw;
}
.map-callout{
  padding:6px 12px;
  color: #fff;
}
.headerTitle {
  width: 120rpx;
  height: 90rpx;
  /* float: left; */
  display: inline-block;
  line-height: 90rpx;
  font-size: 32rpx;
  cursor: pointer;
  box-sizing: border-box;
  color: #6a727b;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.2);
  text-align: center;
}
.headerPanel {
  height: 90rpx;
  width: 100%;
  white-space: nowrap;
  overflow-x: auto;
  overflow-y: hidden;
  background-color: #f6f6f6;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  /* box-shadow: 0 0.5px 0 0 rgba(0, 0, 0, 0.2); */
}